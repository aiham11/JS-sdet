  // New method to create a Rally test step using a Jira test step JSON object
    public String createRallyTestStep(String rallyTestcaseOID, JsonObject gsonTestStepJson) {
        RallyRestApi rallyRestApi = null;
        String rallyTestStepOID = null;

        try {
            rallyRestApi = new RallyRestApi(new URI(rallyBaseURL), rallyApiKey);
            JsonObject newTestStep = new JsonObject();

            // Populate newTestStep with necessary fields from gsonTestStepJson
            newTestStep.addProperty("TestCase", rallyTestcaseOID);
            newTestStep.addProperty("StepIndex", gsonTestStepJson.get("index").getAsInt());
            newTestStep.addProperty("Input", gsonTestStepJson.get("description").getAsString());
            newTestStep.addProperty("ExpectedResult", gsonTestStepJson.get("expectedResult").getAsString());

            // Create Rally TestStep
            CreateRequest createStepRequest = new CreateRequest("TestCaseStep", newTestStep);
            CreateResponse createStepResponse = rallyRestApi.create(createStepRequest);

            if (createStepResponse.wasSuccessful()) {
                rallyTestStepOID = createStepResponse.getObject().get("_ref").getAsString();
                logger.info("Successfully created test step in Rally with OID: " + rallyTestStepOID);
            } else {
                logger.error("Error creating Rally test step. Errors: " + String.join(", ", createStepResponse.getErrors()));
            }
        } catch (Exception e) {
            logger.error("Exception while creating Rally test step: ", e);
        } finally {
            if (rallyRestApi != null) {
                try {
                    rallyRestApi.close();
                } catch (Exception e) {
                    logger.error("Error closing Rally connection: ", e);
                }
            }
        }
        return rallyTestStepOID;
    }
