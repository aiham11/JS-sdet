public class StringFormatter {

    private String stripFormatting(String input) {
        if (input == null) {
            return "";
        }

        // Remove HTML-like formatting tags (e.g., <b>, <i>, <u>)
        input = input.replaceAll("<[^>]*>", "");

        // Optionally, you can also remove extra spaces if necessary, but preserve new lines
        // Remove extra spaces while preserving new lines
        input = input.replaceAll("\\s{2,}", " ");

        // Trim leading and trailing spaces
        input = input.trim();

        return input;
    }

    public static void main(String[] args) {
        StringFormatter formatter = new StringFormatter();
        
        // Example string to test
        String exampleInput = "1 INST-<b>Create Claim</b> (Verify) <i>Procedure Codes</i> (UB04 Form Tab Box 74a-e) <u>User ID:</u> TAM-111224 <b>Password:</b> Keepout!1";

        // Format the string
        String formattedString = formatter.stripFormatting(exampleInput);
        
        // Output the result
        System.out.println("Formatted String:\n" + formattedString);
    }
}
