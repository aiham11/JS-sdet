	at com.optum.coe.automation.rally.RallyOperation.stripFormatting(RallyOperation.java:682)
	at com.optum.coe.automation.rally.RallyOperation.migrateTestStepsWithAttachments(RallyOperation.java:618)
	at com.optum.coe.automation.rally.RunnerClass.main(RunnerClass.java:146)
